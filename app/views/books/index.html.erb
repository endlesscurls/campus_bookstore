<div class="page-header">
  <h1>
    Books
    <a href="/books/new" class="btn btn-lg btn-success">New Book</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Edition</th>
        <th>Actions</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.edition %></td>
        <td>
          <a href="/books/<%= book.id %>" class="btn btn-primary">Show</a>
          <a href="/books/<%= book.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_book/<%= book.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @books, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
