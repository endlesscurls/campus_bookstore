<!-- Validation failure messages -->
<% if @authorship.errors.any? %>
  <% @authorship.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Authorship</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_authorship" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for books_id -->
      <div class="form-group">
        <label for="books_id" class="control-label">
          Books
        </label>

        <input type="text" id="books_id" name="books_id" placeholder="Books" class="form-control" value="<%= @authorship.books_id %>">
      </div>

      <!-- Label and input for authors_id -->
      <div class="form-group">
        <label for="authors_id" class="control-label">
          Authors
        </label>

        <input type="text" id="authors_id" name="authors_id" placeholder="Authors" class="form-control" value="<%= @authorship.authors_id %>">
      </div>

      <button class="btn btn-success">
        Create Authorship
      </button>
      or
      <a href="/authorships">Cancel</a>
    </form>
  </div>
</div>
