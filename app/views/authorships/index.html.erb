<div class="page-header">
  <h1>
    Authorships
    <a href="/authorships/new" class="btn btn-lg btn-success">New Authorship</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Books</th>
        <th>Authors</th>
        <th>Actions</th>
      </tr>

      <% @authorships.each do |authorship| %>
      <tr>
        <td><%= authorship.books.name %></td>
        <td><%= authorship.authors.created_at %></td>
        <td>
          <a href="/authorships/<%= authorship.id %>" class="btn btn-primary">Show</a>
          <a href="/authorships/<%= authorship.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_authorship/<%= authorship.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @authorships, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
