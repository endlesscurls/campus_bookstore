<div class="page-header">
  <h1>
    Class schedules
    <a href="/class_schedules/new" class="btn btn-lg btn-success">New Class schedule</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Courses</th>
        <th>Students</th>
        <th>Actions</th>
      </tr>

      <% @class_schedules.each do |class_schedule| %>
      <tr>
        <td>
          <% if class_schedule.courses.present? %>
            <a href="/courses/<%= class_schedule.courses.id %>">
              <%= class_schedule.courses.course_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if class_schedule.students.present? %>
            <a href="/students/<%= class_schedule.students.id %>">
              <%= class_schedule.students.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/class_schedules/<%= class_schedule.id %>" class="btn btn-primary">Show</a>
          
          <% if current_student == class_schedule.students %>
            <a href="/class_schedules/<%= class_schedule.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_class_schedule/<%= class_schedule.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @class_schedules, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
